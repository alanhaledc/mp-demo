<import src='post-item/post-item-template.wxml'/>  
<view>
  <swiper indicator-dots='333' indicator-active-color='#fff' autoplay='true' interval='2000' circular='true' vertical='{{false}}'>
    <swiper-item >
      <image src='/images/wx.png'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/vr.png'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/iqiyi.png'></image>
    </swiper-item>    
  </swiper>
  <block wx:for='{{postList}}' wx:key='postItem'>
    <!-- template -->
    <view catchtap='onPostTop' data-postId='{{item.postId}}'>
       <template is='postItem' data='{{...item}}'/>
    </view>
  </block>
</view>